@model AdminDashboard.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-6">
            <dl class="row">

                <dt class="col-sm-4">
                    ID
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-4">
                    Product Name
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.product_name)
                </dd>
                <dt class="col-sm-4">
                    Product Description
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.product_Description)
                </dd>
                <dt class="col-sm-4">
                    Product Price
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.product_price)
                </dd>
                <dt class="col-sm-4">
                    Category
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.category.category_name)
                </dd>
            </dl>

            <form asp-action="confirmDelete" asp-route-id="@Model.Id">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
            </form>
        </div>
        <div class="col-6">
            @if (Model.imageURL != null)
            {
                <img src="~/upload/@Model.imageURL" alt="prod_img" style="width:100%;height:100%" class="img-thumbnail">
            }
            else
            {
                <img src="~/upload/defult.png" alt="prod_img" style="width:100%;height:100%" class="img-thumbnail">
            }
        </div>
    </div>
